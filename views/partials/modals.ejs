<!-- Custom Modals -->
<div id="confirmModal" class="modal-overlay">
    <div class="modal-container">
        <div class="modal-glow danger"></div>
        <div class="modal-content">
            <div class="modal-icon danger">
                <i class="bi bi-exclamation-triangle-fill"></i>
            </div>
            <h3 class="modal-title" id="modalTitle">¿Estás seguro?</h3>
            <p class="modal-message" id="modalMessage">Esta acción no se puede deshacer.</p>

            <div class="modal-detail-box" id="modalDetailBox" style="display: none;">
                <div class="modal-detail-label" id="modalDetailLabel">Detalle</div>
                <div class="modal-detail-value" id="modalDetailValue">Valor</div>
            </div>

            <div class="modal-actions">
                <button class="modal-btn modal-btn-cancel" id="modalCancel">
                    <i class="bi bi-x-lg"></i>
                    <span>Cancelar</span>
                </button>
                <button class="modal-btn modal-btn-danger" id="modalConfirm">
                    <i class="bi bi-trash"></i>
                    <span>Eliminar</span>
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Medico Details Modal -->
<div id="medicoDetailsModal" class="modal-overlay">
    <div class="modal-container modal-details">
        <div class="modal-glow info"></div>
        <div class="modal-close-btn" id="closeMedicoDetails">
            <i class="bi bi-x-lg"></i>
        </div>
        <div class="modal-content">
            <div class="text-center mb-4">
                <div class="modal-icon warning mb-3" style="width: 70px; height: 70px; font-size: 2rem;">
                    <i class="bi bi-person-badge"></i>
                </div>
                <h3 class="modal-title mb-1" id="medicoDetailsName">Dr. Nombre Apellido</h3>
                <p class="text-muted">Detalles del profesional</p>
            </div>

            <div class="medico-details-content">
                <!-- Personal Info -->
                <div class="details-section">
                    <div class="section-header-small">
                        <i class="bi bi-person"></i> Información Personal
                    </div>
                    <div class="details-table">
                        <div class="detail-row">
                            <div class="detail-label"><i class="bi bi-card-heading"></i> Documento</div>
                            <div class="detail-value" id="detailDocumento">DNI 12.345.678</div>
                        </div>
                        <div class="detail-row">
                            <div class="detail-label"><i class="bi bi-calendar-event"></i> Nacimiento</div>
                            <div class="detail-value" id="detailFechaNacimiento">01/01/1980</div>
                        </div>
                        <div class="detail-row" id="detailEdadRow">
                            <div class="detail-label"><i class="bi bi-hourglass-split"></i> Edad</div>
                            <div class="detail-value" id="detailEdad">43 años</div>
                        </div>
                    </div>
                </div>

                <!-- Professional Info -->
                <div class="details-section">
                    <div class="section-header-small">
                        <i class="bi bi-briefcase"></i> Información Profesional
                    </div>
                    <div class="details-table">
                        <div class="detail-row">
                            <div class="detail-label"><i class="bi bi-award"></i> Especialidad</div>
                            <div class="detail-value">
                                <span class="detail-value specialty-badge" id="detailEspecialidad">Cardiología</span>
                            </div>
                        </div>
                        <div class="detail-row">
                            <div class="detail-label"><i class="bi bi-card-text"></i> Matrícula</div>
                            <div class="detail-value" id="detailMatricula">MP 12345</div>
                        </div>
                    </div>
                </div>

                <!-- Schedule Info -->
                <div class="details-section">
                    <div class="section-header-small">
                        <i class="bi bi-calendar-week"></i> Horarios de Atención
                    </div>
                    <div class="details-table">
                        <div class="detail-row">
                            <div class="detail-label"><i class="bi bi-clock"></i> Horario</div>
                            <div class="detail-value" id="detailHorario">08:00 - 16:00</div>
                        </div>
                        <div class="detail-row">
                            <div class="detail-label"><i class="bi bi-calendar-check"></i> Días</div>
                            <div class="detail-value dias-badges" id="detailDias">
                                <span class="dia-badge">Lunes</span>
                                <span class="dia-badge">Miércoles</span>
                                <span class="dia-badge">Viernes</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Contact Info -->
                <div class="details-section">
                    <div class="section-header-small">
                        <i class="bi bi-chat-left-text"></i> Contacto
                    </div>
                    <div class="details-table">
                        <div class="detail-row">
                            <div class="detail-label"><i class="bi bi-envelope"></i> Email</div>
                            <div class="detail-value" id="detailEmail">doctor@example.com</div>
                        </div>
                        <div class="detail-row">
                            <div class="detail-label"><i class="bi bi-telephone"></i> Teléfono</div>
                            <div class="detail-value" id="detailTelefono">123-456-7890</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-actions">
                <button class="modal-btn modal-btn-primary" id="closeDetailBtn">
                    <i class="bi bi-check-lg"></i>
                    <span>Cerrar</span>
                </button>
            </div>
        </div>
    </div>
</div>